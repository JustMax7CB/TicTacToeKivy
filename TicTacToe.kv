<GameWindow>:
    b1 : b1
    b2 : b2
    b3 : b3
    b4 : b4
    b5 : b5
    b6 : b6
    b7 : b7
    b8 : b8
    b9 : b9
    x_win: x_win
    o_win: o_win
    playerTimer: playerTimer
    #: set x_win 0
    #: set o_win 0
    #: set playerTimer 0
    GridLayout:
        padding: 5
        rows: 3
        cols: 1
        size: root.width, root.height
        BoxLayout:
            size: self.width, self.height
            size_hint: 1,0.4
            orientation: 'vertical'
            MDToolbar:
                title: 'TicTacToe Game'
                size: self.width, self.height
                size_hint: 1, 0.8
            GridLayout:
                rows: 1
                cols: 2
                MDLabel:
                    id: x_win_label
                    text: f"X Wins:{x_win}"
                    halign: 'left'
                    padding_x: 10
                MDLabel:
                    id: o_win_label
                    text: f"O Wins:{o_win}"
                    halign: 'right'
                    padding_x: 10
        GridLayout:
            padding: 2
            rows: 3
            cols: 3
            size: self.width, self.height
            Button:
                id: b1
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b2
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b3
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b4
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b5
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b6
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b7
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b8
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
            Button:
                id: b9
                font_size: 60
                on_press: root.Play(self,b1,b2,b3,b4,b5,b6,b7,b8,b9)
        FloatLayout:
            size: max(root.size), max(root.size)
            size_hint: 0.2, 0.1
            Button:
                text: 'Restart Game'
                size: self.width, self.height
                size_hint: 0.3, 0.8
                pos_hint :{'center_x': .5, 'center_y': .5}
                on_press: root.Restart(b1,b2,b3,b4,b5,b6,b7,b8,b9)